<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title"
        android:textSize="24sp" />

    <Button
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addPermissionStorage"
        android:text="@string/storage_perssion"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:onClick="addPermissionPhone"
        android:text="@string/phone_perssion"
         />

    <Button
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoSetting"
        android:text="@string/goto_setting"
         />

    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:id="@+id/tv_deviced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>